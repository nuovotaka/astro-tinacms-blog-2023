---
import { Image } from 'astro:assets'

interface Props {
  src: ImageMetadata
  alt: string
  cls?: string
}

const { src, alt, cls } = Astro.props
---

{
  src.format == 'svg' ? (
    <img src={src.src} {alt} class={cls} loading="lazy" />
  ) : (
    <Image src={src} {alt} class={cls} loading="lazy" />
  )
}
